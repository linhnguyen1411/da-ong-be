<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  
  <!-- Homepage -->
  <url>
    <loc><%= @base_url %>/</loc>
    <lastmod><%= @lastmod %></lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- Menu Page -->
  <url>
    <loc><%= @base_url %>/menu</loc>
    <lastmod><%= @lastmod %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>
  
  <!-- Best Seller Page -->
  <url>
    <loc><%= @base_url %>/best-seller</loc>
    <lastmod><%= @lastmod %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.8</priority>
  </url>
  
  <!-- Daily Special Page -->
  <url>
    <loc><%= @base_url %>/daily-special</loc>
    <lastmod><%= @lastmod %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.8</priority>
  </url>
  
  <!-- Booking Page -->
  <url>
    <loc><%= @base_url %>/booking</loc>
    <lastmod><%= @lastmod %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  
  <!-- Contact Page -->
  <url>
    <loc><%= @base_url %>/contact</loc>
    <lastmod><%= @lastmod %></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  
  <!-- Menu Items (if you want individual pages for each item) -->
  <% @menu_items.each do |item| %>
    <url>
      <loc><%= @base_url %>/menu?item=<%= item.id %></loc>
      <lastmod><%= item.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.6</priority>
      <% if item.images.attached? && item.images.first.present? %>
        <image:image>
          <image:loc><%= rails_blob_url(item.images.first, host: 'nhahangdavaong.com', protocol: 'https') %></image:loc>
          <image:title><%= item.name %></image:title>
          <image:caption><%= item.description %></image:caption>
        </image:image>
      <% end %>
    </url>
  <% end %>
  
  <!-- Categories -->
  <% @categories.each do |category| %>
    <url>
      <loc><%= @base_url %>/menu?category=<%= category.id %></loc>
      <lastmod><%= category.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.7</priority>
    </url>
  <% end %>
  
</urlset>

